// City Generator

// Delete any existing window with this name
if (`window -exists cityGenerator`) {
    deleteUI -window cityGenerator;
}

// Define a procedure for "createStreet".
global proc createStreet() {
    polyCube; //Create each cell, scale them and then move them to the correct position.
    scale 3 0.1 3;
    move -3 0 -3;
    rename "Cell1";
    polyCube;
    scale 3 0.1 3;
    move 0 0 -3;
    rename "Cell2";
    polyCube;
    scale 3 0.1 3;
    move 3 0 -3;
    rename "Cell3";
    polyCube;
    scale 3 0.1 3;
    move -3 0 0;
    rename "Cell4";
    polyCube;
    scale 3 0.1 3;
    move 0 0 0;
    rename "Cell5";
    polyCube;
    scale 3 0.1 3;
    move 3 0 0;
    rename "Cell6";
    polyCube;
    scale 3 0.1 3;
    move -3 0 3;
    rename "Cell7";
    polyCube;
    scale 3 0.1 3;
    move 0 0 3;
    rename "Cell8";
    polyCube;
    scale 3 0.1 3;
    move 3 0 3;
    rename "Cell9";
    for ($x = 0; $x < 9; $x++) //Create a for loop; loops 9 times.
{
    int $number = `rand 1 4`; //Generate a random number between 1 and 3.
    if ($number == 1) { //If statement checking if number generated is equal to 1.
    string $sph[] = `polySphere`; //Create a new sphere.
    select $sph;
    }
    else if ($number == 2) {
    string $cube[] = `polyCube`; //Create a new cube.
    select $cube;
    }
    else if ($number == 3) {
    string $cylinder[] = `polyCylinder`; //Create a new cylinder.
    select $cylinder;
    }
    if ($x == 0) { //Move each shape to the correct cell.
        move -3 1 -3;
    }
    else if ($x == 1) {
        move 0 1 -3;
    }
    else if ($x == 2) {
        move 3 1 -3;
    }
    else if ($x == 3) {
        move -3 1 0;
    }
    else if ($x == 4) {
        move 0 1 0;
    }
    else if ($x == 5) {
        move 3 1 0;
    }
    else if ($x == 6) {
        move -3 1 3;
    }
    else if ($x == 7) {
        move 0 1 3;
    }
    else if ($x == 8) {
        move 3 1 3;
    }
}
    }

// Define a procedure for "createTown".
global proc createTown() {
    polyCube;
    }

// Define a procedure for "createCity".
global proc createCity() {
    polyCylinder;
    }

// Define a procedure for "createCustomEnvironment".
global proc createCustomEnvironment() {
    polyPyramid;
    }

// Build the window
window -title "City Generator" -widthHeight 200 100 cityGenerator;
columnLayout -adjustableColumn true -rowSpacing 20;
    text -label "Please select an environment below!";
    separator -height 10 -style "none";
    text -label "Create a small street!";
    button -label "Create Street" -command "createStreet()" -bgc 0 255 0; //Green button for a street.
    separator -height 10 -style "none";
    text -label "Create a medium town!";
    button -label "Create Town" -command "createTown()" -bgc 255 165 0; //Yellow button for a town.
    separator -height 10 -style "none";
    text -label "Create a large city!";
    button -label "Create City" -command "createCity()" -bgc 255 0 0; //Red button for a city.
    separator -height 10 -style "none";
    text -label "Create a custom environment!";
    button -label "Create Custom Environment" -command "createCustomEnvironment()" -bgc 0.530 0.810 0.920; //Blue button for a custom environment.
setParent ..;

// Show the window
showWindow cityGenerator;
