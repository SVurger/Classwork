// City Generator

// Delete any existing window with this name
if (`window -exists cityGenerator`) {
    deleteUI -window cityGenerator;
}

// Define a procedure for "createStreet".
global proc createStreet() {
    polyCube; //Create each cell, scale them and then move them to the correct position.
    scale 3 0.1 3;
    move -3 0 -3;
    rename "Cell1";
    polyCube;
    scale 3 0.1 3;
    move 0 0 -3;
    rename "Cell2";
    polyCube;
    scale 3 0.1 3;
    move 3 0 -3;
    rename "Cell3";
    polyCube;
    scale 3 0.1 3;
    move -3 0 0;
    rename "Cell4";
    polyCube;
    scale 3 0.1 3;
    move 0 0 0;
    rename "Cell5";
    polyCube;
    scale 3 0.1 3;
    move 3 0 0;
    rename "Cell6";
    polyCube;
    scale 3 0.1 3;
    move -3 0 3;
    rename "Cell7";
    polyCube;
    scale 3 0.1 3;
    move 0 0 3;
    rename "Cell8";
    polyCube;
    scale 3 0.1 3;
    move 3 0 3;
    rename "Cell9";
    for ($x = 0; $x < 9; $x++) //Create a for loop; loops 9 times.
{
    int $number = `rand 1 4`; //Generate a random number between 1 and 3.
    if ($number == 1) { //If statement checking if number generated is equal to 1.
    string $head[] = `polySphere`; //Create a stickman.
    select $head;
    move 0 5 0;
    rename "Head";
    string $torso[] = `polyCylinder`;
    select $torso;
    move 0 3 0;
    scale 0.25 1 0.25;
    rename "Torso";
    string $left_arm[] = `polyCylinder`;
    select $left_arm;
    move -0.75 2.5 0;
    rotate 0 0 -20;
    scale 0.25 1 0.25;
    rename "Left_Arm";
    string $right_arm[] = `polyCylinder`;
    select $right_arm;
    move 0.75 2.5 0;
    rotate 0 0 20;
    scale 0.25 1 0.25;
    rename "Right_Arm";
    string $left_leg[] = `polyCylinder`;
    select $left_leg;
    move -0.5 1 0;
    rotate 0 0 -20;
    scale 0.25 1 0.25;
    rename "Left_Leg";
    string $right_leg[] = `polyCylinder`;
    select $right_leg;
    move 0.5 1 0;
    rotate 0 0 20;
    scale 0.25 1 0.25;
    rename "Right_Leg";
    select Left_Arm Right_Arm Left_Leg Right_Leg Torso Head;
    parent;
    select Head;
    move 0 1 0;
    scale 0.19 0.19 0.19;
    select Left_Arm;
    rename "L_A";
    select Right_Arm;
    rename "R_A";
    select Left_Leg;
    rename "L_L";
    select Right_Leg;
    rename "R_L";
    select Torso;
    rename "T";
    select Head;
    rename "H";
    }
    else if ($number == 2) {
    string $cube[] = `polyCube`; //Create a new cube.
    select $cube;
    }
    else if ($number == 3) {
    string $cylinder[] = `polyCylinder`; //Create a new cylinder.
    select $cylinder;
    }
    if ($x == 0) { //Move each shape to the correct cell.
        move -3 1 -3;
    }
    else if ($x == 1) {
        move 0 1 -3;
    }
    else if ($x == 2) {
        move 3 1 -3;
    }
    else if ($x == 3) {
        move -3 1 0;
    }
    else if ($x == 4) {
        move 0 1 0;
    }
    else if ($x == 5) {
        move 3 1 0;
    }
    else if ($x == 6) {
        move -3 1 3;
    }
    else if ($x == 7) {
        move 0 1 3;
    }
    else if ($x == 8) {
        move 3 1 3;
    }
}
    }

// Define a procedure for "createTown".
