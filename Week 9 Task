    polyCube;
    scale 3 0.1 3;
    move -3 0 3;
    rename "Cell17";
    polyCube;
    scale 3 0.1 3;
    move 0 0 3;
    rename "Cell18";
    polyCube;
    scale 3 0.1 3;
    move 3 0 3;
    rename "Cell19";
    polyCube;
    scale 3 0.1 3;
    move 6 0 3;
    rename "Cell20";
    polyCube;
    scale 3 0.1 3;
    move -6 0 6;
    rename "Cell21";
    polyCube;
    scale 3 0.1 3;
    move -3 0 6;
    rename "Cell22";
    polyCube;
    scale 3 0.1 3;
    move 0 0 6;
    rename "Cell23";
    polyCube;
    scale 3 0.1 3;
    move 3 0 6;
    rename "Cell24";
    polyCube;
    scale 3 0.1 3;
    move 6 0 6;
    rename "Cell25";
    for ($x = 0; $x < 25; $x++)
{
    int $number = `rand 1 4`;
    if ($number == 1) {
    string $sph[] = `polySphere`;
    select $sph;
    }
    else if ($number == 2) {
    string $cube[] = `polyCube`;
    select $cube;
    }
    else if ($number == 3) {
    string $cylinder[] = `polyCylinder`;
    select $cylinder;
    }
    if ($x == 0) {
        move -6 1 -6;
    }
    else if ($x == 1) {
        move -3 1 -6;
    }
    else if ($x == 2) {
        move 0 1 -6;
    }
    else if ($x == 3) {
        move 3 1 -6;
    }
    else if ($x == 4) {
        move 6 1 -6;
    }
    else if ($x == 5) {
        move -6 1 -3;
    }
    else if ($x == 6) {
        move -3 1 -3;
    }
    else if ($x == 7) {
        move 0 1 -3;
    }
    else if ($x == 8) {
        move 3 1 -3;
    }
    else if ($x == 9) {
        move 6 1 -3;
    }
    else if ($x == 10) {
        move -6 1 0;
    }
    else if ($x == 11) {
        move -3 1 0;
    }
    else if ($x == 12) {
        move 0 1 0;
    }
    else if ($x == 13) {
        move 3 1 0;
    }
    else if ($x == 14) {
        move 6 1 0;
    }
    else if ($x == 15) {
        move -6 1 3;
    }
    else if ($x == 16) {
        move -3 1 3;
    }
    else if ($x == 17) {
        move 0 1 3;
    }
    else if ($x == 18) {
        move 3 1 3;
    }
    else if ($x == 19) {
        move 6 1 3;
    }
    else if ($x == 20) {
        move -6 1 6;
    }
    else if ($x == 21) {
        move -3 1 6;
    }
    else if ($x == 22) {
        move 0 1 6;
    }
    else if ($x == 23) {
        move 3 1 6;
    }
    else if ($x == 24) {
        move 6 1 6;
    }
}
    }

